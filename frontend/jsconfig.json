{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/components/*": ["src/components/*"],
      "@/hooks/*": ["src/hooks/*"],
      "@/handlers/*": ["src/handlers/*"],
      "@/styles/*": ["src/styles/*"],
      "@/utils/*": ["src/utils/*"],
      "@/fonts/*": ["public/fonts/*"],
      "@/public/*": ["public/*"]
    }
  },
  "exclude": ["node_modules"]
}
